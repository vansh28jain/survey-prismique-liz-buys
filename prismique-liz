<script>
    const CPA_LINK = "https://sites.google.com/view/prismique-liz-buys/home"; 

    const questions = [
        "Are you 18 years or older?",
        "Have you purchased anything online recently?",
        "Are you interested in receiving a free reward?"
    ];

    let step = 0;

    function loadQuestion() {
        document.getElementById("question").innerText = questions[step];
        document.getElementById("step").innerText = step + 1;
        document.getElementById("progress").style.width = ((step + 1) / questions.length) * 100 + "%";
    }

    function answer(choice) {
        step++;
        if (step < questions.length) {
            loadQuestion();
        } else {
            document.getElementById("buttons").classList.add("hidden");
            document.getElementById("loading").classList.remove("hidden");

            setTimeout(() => {
                document.getElementById("loading").classList.add("hidden");
                document.getElementById("final").classList.remove("hidden");
                document.getElementById("claimBtn").href = CPA_LINK;
                document.getElementById("subtitle").innerText = "Result Ready âœ”";
                document.getElementById("question").classList.add("hidden");
            }, 2500);
        }
    }

    loadQuestion();
</script>

